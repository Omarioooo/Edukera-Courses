@model List<CourseDetailsViewModel>
@{
    ViewData["Title"] = "Show All Courses";
}

<section class="page-section">
    <div class="container">
        <h1 class="text-uppercase text-center text-secondary mb-4" style="margin-top: 50px">Courses</h1>

        <!-- Search Bar -->
        <form method="get" asp-controller="Course" asp-action="ShowAll" class="mb-4">
            <div class="input-group shadow">
                <input type="text" name="search" value="@Context.Request.Query["search"]"
                       class="form-control form-control-lg"
                       placeholder="Search for course..." />
                <button class="btn btn-primary btn-lg text-uppercase" type="submit">
                    Search
                </button>
            </div>
        </form>

        <table class="table table-striped table-hover table-bordered align-middle text-center shadow">
            <thead class="table-dark">
                <tr>
                    <td>ID</td>
                    <td>Course</td>
                    <td>Degree</td>
                    <td>Min-Degree</td>
                    <td>Department</td>
                    <td>Course Details</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Degree</td>
                        <td>@item.MinDegree</td>
                        <td>@item.DepartmentName</td>
                        <td>
                            <a class="btn btn-sm btn-primary text-uppercase"
                               asp-controller="Course"
                               asp-action="Details"
                               asp-route-id="@item.Id">
                                Show Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a class="btn btn-success btn-lg text-uppercase shadow"
               asp-controller="Course"
               asp-action="Add">
                Add New Course
            </a>
        </div>
    </div>
</section>