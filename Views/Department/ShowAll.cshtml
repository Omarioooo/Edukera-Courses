@model List<Department>
@{
    ViewData["Title"] = "Show All Departments";
}

<section class="page-section">
    <div class="container">
        <h1 class="text-uppercase text-center text-secondary mb-4" style="margin-top: 50px">Instructors</h1>

        <table class="table table-striped table-hover table-bordered align-middle text-center shadow">
            <thead class="table-dark">
                <tr>
                    <td>ID</td>
                    <td>Department</td>
                    <td>Manger Name</td>
                    <td>Logo</td>
                    <th>Department Profile</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.ManagerName</td>
                        <td>
                            <img src="~/images/company.jpg" alt="company"
                                 alt="Profile Photo"
                                 class="img-thumbnail"
                                 style="width:100px; height:100px; object-fit:cover;" />
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary text-uppercase"
                               asp-controller="Department"
                               asp-action="Details"
                               asp-route-id="@item.Id">
                                Show Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a class="btn btn-success btn-lg text-uppercase shadow"
               asp-controller="Department"
               asp-action="Add">
                Add New Department
            </a>
        </div>
    </div>
</section>