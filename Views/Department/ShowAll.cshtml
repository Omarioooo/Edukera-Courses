@model List<Department>
@{
    ViewData["Title"] = "Show All Departments";
}
<section class="page-section">
    <div class="container">
        <h1 class="text-uppercase text-center text-secondary mb-4" style="margin-top: 50px">
            Departments
        </h1>

        <!-- Search Bar -->
        <form method="get" asp-controller="Department" asp-action="ShowAll" class="mb-4">
            <div class="input-group shadow">
                <input type="text" name="search" value="@Context.Request.Query["search"]"
                       class="form-control form-control-lg"
                       placeholder="Search for department..." />
                <button class="btn btn-primary btn-lg text-uppercase" type="submit">
                    Search
                </button>
            </div>
        </form>

        <!-- Table -->
        <table class="table table-striped table-hover table-bordered align-middle text-center shadow">
            <thead class="table-dark">
                <tr>
                    <td>ID</td>
                    <td>Department</td>
                    <td>Manager Name</td>
                    <td>Logo</td>
                    <th>Department Profile</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.ManagerName</td>
                        <td>
                            <img src="~/images/company.jpg" alt="company"
                                 class="img-thumbnail"
                                 style="width:100px; height:100px; object-fit:cover;" />
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary text-uppercase"
                               asp-controller="Department"
                               asp-action="Details"
                               asp-route-id="@item.Id">
                                Show Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Add Button -->
        <div class="text-center mt-4">
            <a class="btn btn-success btn-lg text-uppercase shadow"
               asp-controller="Department"
               asp-action="Add">
                Add New Department
            </a>
        </div>
    </div>
</section>
