@model InstructorFormViewModel
@{
    ViewData["Title"] = "Add Instructor";
}

<section class="page-section" style="margin-top: 50px">
    <div class="container">
        <h1 class="text-uppercase text-center text-secondary mb-4">Add Instructor</h1>

        <div class="card shadow-lg mx-auto" style="max-width: 700px;">
            <div class="card-body">
                <form asp-controller="Instructor" asp-action="AddSave" method="post">

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter instructor name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Salary" class="form-label"></label>
                        <input asp-for="Salary" class="form-control" placeholder="Enter salary" />
                        <span asp-validation-for="Salary" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageURL" class="form-label"></label>
                        <input asp-for="ImageURL" class="form-control" placeholder="Enter image path or URL" />
                        <span asp-validation-for="ImageURL" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" placeholder="Enter address"/>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DeptID" class="form-label"></label>
                        <select asp-for="DeptID" class="form-select">
                            <option value="">-- Select Department --</option>
                            @foreach (var dep in Model?.Departments)
                            {
                                <option value="@dep.Id">@dep.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CrsID" class="form-label"></label>
                        <select asp-for="CrsID" class="form-select">
                            <option value="">-- Select Course --</option>
                            @foreach (var crs in Model?.Courses)
                            {
                                <option value="@crs.Id">@crs.Name</option>
                            }
                        </select>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-controller="Instructor" asp-action="ShowAll"
                           class="btn btn-secondary">
                             Back To List
                        </a>
                        <button type="submit" class="btn btn-primary">
                             Save
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

