@model InstructorFormViewModel
@{
    ViewData["Title"] = "Edit";
}

<section class="page-section" style="margin-top: 50px">
    <div class="container">
        <h1 class="text-uppercase text-center text-secondary mb-4">Edit Instructor</h1>

        <div class="card shadow-lg mx-auto" style="max-width: 700px;">
            <div class="card-body">
                <form asp-controller="Instructor" asp-action="EditSave" method="post">
                    <input type="hidden" name="Id" value="@Model?.Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter instructor name" />
                        <span asp-validation-for="Name" class="text-bg-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Salary" class="form-label"></label>
                        <input asp-for="Salary" class="form-control" placeholder="Enter salary" />
                        <span asp-validation-for="Salary" class="text-bg-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageURL" class="form-label"></label>
                        <input asp-for="ImageURL" class="form-control" placeholder="Enter image path or URL" />
                        <span asp-validation-for="ImageURL" class="text-bg-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" placeholder="Enter address" />
                        <span asp-validation-for="Address" class="text-bg-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DeptID" class="form-label"></label>
                        <select asp-for="DeptID" class="form-select">
                            <option value="">-- Select Department --</option>
                            @foreach (var dep in Model?.Departments)
                            {
                                if (Model.DeptID == dep.Id)
                                {
                                    <option value="@dep.Id" selected> @dep.Name </option>
                                }
                                else
                                {
                                    <option value="@dep.Id"> @dep.Name </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="DeptID" class="text-bg-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CrsID" class="form-label"></label>
                        <select asp-for="CrsID" class="form-select">
                            <option value="">-- Select Course --</option>
                            @foreach (var crs in Model?.Courses)
                            {
                                if (Model.CrsID == crs.Id)
                                {
                                    <option value="@crs.Id" selected> @crs.Name </option>
                                }
                                else
                                {
                                    <option value="@crs.Id"> @crs.Name </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CrsID" class="text-bg-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-controller="Instructor" asp-action="ShowAll"
                           class="btn btn-secondary">
                            Back To List
                        </a>
                        <!--  onclick="confirmUpdate()" -->
                        <button type="submit" class="btn btn-primary">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
