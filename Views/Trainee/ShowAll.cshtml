@model List<TraineeShowAllModelView>
@{
    ViewData["Title"] = "Show All Trainees";
}
<section class="page-section">
    <div class="container">
        <h1 class="text-uppercase text-center text-secondary mb-4" style="margin-top: 50px">Trainees</h1>

        <table class="table table-striped table-hover table-bordered align-middle text-center shadow">
            <thead class="table-dark">
                <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Department</th>
                        <th>Profile Photo</th>
                        <th>Trainee Profile</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.DepartmentName</td>
                            <td>
                                <img src="/images/@item.ImageURL"
                                     alt="Profile Photo"
                                     class="img-thumbnail"
                                     style="width:100px; height:100px; object-fit:cover;" />
                            </td>
                            <td>
                                <a asp-action="Details"
                                   asp-controller="Trainee"
                                   asp-route-id="@item.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    Show Details
                                </a>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a class="btn btn-success btn-lg text-uppercase shadow"
               asp-controller="Trainee"
               asp-action="Add">
                Add New Trainee
            </a>
        </div>
    </div>
</section>
