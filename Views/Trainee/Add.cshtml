@model ViewModels.TraineeFormViewModel
@{
    ViewData["Title"] = "Add Trainee";
    var grades = new SelectList(
        new List<string> { "Excellent", "VeryGood", "Good", "Acceptable", "None" },
        Model?.Grade
    );
}


<section class="page-section" style="margin-top: 50px">
    <div class="container">
        <h1 class="text-uppercase text-center text-secondary mb-4">Add Trainee</h1>

        <div class="card shadow-lg mx-auto" style="max-width: 700px;">
            <div class="card-body">
                <form asp-controller="Trainee" asp-action="AddSave" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter trainee name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="Grade" class="form-label"></label>
                        <select asp-for="Grade" asp-items="grades" class="form-select">
                            <option value="">-- Select Grade --</option>
                        </select>
                        <span asp-validation-for="Grade" class="text-danger small"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" placeholder="Enter address" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DeptID" class="form-label"></label>
                        <select asp-for="DeptID" class="form-select">
                            <option value="">-- Select Department --</option>
                            @foreach (var dep in Model.Departments)
                            {
                                <option value="@dep.Id">@dep.Name</option>
                            }
                        </select>
                        <span asp-validation-for="DeptID" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <!-- Label bound to the imageFile property -->
                        <label asp-for="Picture" class="form-label">Upload Image</label>

                        <!-- Drag & Drop area -->
                        <div id="drop-area" class="border border-2 p-3 text-center rounded">
                            <p>Drag & Drop an image here or click to select</p>

                            <!-- Hidden file input bound to imageFile -->
                            <input asp-for="Picture" type="file" id="fileElem" accept="image/*" style="display:none" />

                            <!-- Button to open file dialog -->
                            <button type="button" class="btn btn-secondary" onclick="document.getElementById('fileElem').click();">
                                Choose File
                            </button>

                            <!-- Error Validation -->
                            <span asp-validation-for="Picture" class="text-danger small"></span>
                        </div>

                        <!-- Image preview after file selection -->
                        <img id="preview" src="#" alt="Preview" class="mt-3" style="max-width:200px; display:none;" />
                    </div>


                    <div class="d-flex justify-content-between mt-4">
                        <a asp-controller="Trainee" asp-action="ShowAll"
                           class="btn btn-secondary">
                            Back To List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            Save
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>